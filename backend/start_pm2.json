{
	"apps" : [
		{
			"name"        : "basedscan",
			"script"      : "build/main.js",
			"exec_mode"   : "fork",
			"watch"       : "*",
			"log_date_format": "YYYY-MM-DD HH:mm:ss.SSS",
			"max_memory_restart": "2048M",
			"env" : {
				"NODE_ENV": "development",
				"BLUEBIRD_WARNINGS": 1,
				"BLUEBIRD_LONG_STACK_TRACES": 1,
				"BLUEBIRD_W_FORGOTTEN_RETURN": 0,
				"PORT": 8600
			},
			"node_args": ["--inspect=9600"]
		}
	]
}
